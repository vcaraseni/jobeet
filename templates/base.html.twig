<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    <div>
        <a href="{{ path('micro_post_index') }}">Micro Post app</a>
        <div>
            <ul>
                {% if is_granted('ROLE_USER') %}
                <li>
                    <a href="{{ path('micro_post_add') }}">Add new</a>
                </li>
                {% endif %}
            </ul>
        </div>

        <div>
            <ul>
                {% if is_granted('ROLE_USER') %}
                <li class="nav-item text-nowrap">
                    <a class="">Notifications
                        <span id="notification-count"><i class="fa fa-circle fa-circle-o-notch fa-spin"></i></span>
                    </a>
                </li>
                <li>
                    <a href="#">{{ app.user.fullName }}</a>
                </li>
                <li>
                    <a href="{{ path('security_logout') }}">Sign out</a>
                </li>
                {% endif %}
                <li>
                    <a href="{{ path('security_login') }}">Sign in</a>
                </li>
            </ul>
        </div>
    </div>

    <div style="margin: 0 auto;width: 377px;">
        {% block body %}{% endblock %}
    </div>
        {% block javascripts %}
            {% if is_granted('ROLE_USER') %}
                <script>
                    function fetchNotificationCount() {
                        fetch(
                            '{{ path('notification_unread') }}',
                            { 'credentials' : 'include' }
                        ).then(function (response) {
                            response.json().then(function () {
                                document.getElementById('notification-count').innerText = json.count;
                                setTimeout(fetchNotificationCount, 5000);
                            });
                        }).catch(function () {

                        });
                    }

                    fetchNotificationCount();
                </script>
            {% endif %}
        {% endblock %}
    </body>
</html>
